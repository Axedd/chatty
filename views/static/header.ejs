<header>
    <% if (user) { %>
        <h1>Hello <%= user.username[0].toUpperCase() + user.username.slice(1) %></h1>
    <% } else { %>
        <h1>Hello Guest</h1>
    <% } %>
    <nav>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="#">About</a></li>
            <li><a href="/profile">Profile</a></li>
            <% if (!user) { %>
                <li><a href="/login">Login</a></li>
            <% } else { %>
                <li><a href="/logout">Logout</a></li>
            <% } %>
        </ul>
    </nav>    
</header>